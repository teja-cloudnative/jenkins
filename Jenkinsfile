// pipeline --> stages --> stage --> steps --> step
pipeline {
  agent {label 'terraform'}
  stages {

    stage('Terraform Init') {
      steps {
        sh 'echo Hello World'
      }
    }

    stage('Terraform Plan') {
      steps {
        sh 'echo Hello World'
      }
    }

    stage('Terraform Apply') {
      steps {
        sh 'echo Hello World'
      }
    }
  }
}